<div class="mt4">
    <h2>Sửa Ảnh</h2>
    <form method="post" action="/product/{{product._id}}?_method=PUT">
        <div class="form-group">
            {{!-- <label for="name">Email address</label> --}}
            <input class="form-control" value="{{product.name}}" id="name" name ="name" placeholder="Tên ảnh">
        </div>

        <div class="form-group">
            {{!-- <label for="description">Email address</label> --}}
            <textarea class="form-control" id="description" name ="description" placeholder="Mô tả">{{product.description}}</textarea>
        </div>

        <div class="form-group">
            {{!-- <label for="image">Email address</label> --}}
            <input class="form-control" value="{{product.image}}" id="image" name ="image" placeholder="Link ảnh">
        </div>

        <div class="form-group">
            <input class="form-control" value="{{product.price}}" id="price" name ="price" placeholder="Giá tiền">
        </div>
 
        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>